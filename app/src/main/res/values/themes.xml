<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ej02_Estilos" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ejercicio 1 -->
        <item name="colorPrimary">@color/malva</item>
        <item name="colorSecondary">@color/cyan</item>
        <item name="editTextStyle">@style/CustomEditTextStyle</item>
    </style>

    <style name="Theme.Ej02_Estilos" parent="Base.Theme.Ej02_Estilos" />

    <!-- Ejercicio 1 -->
    <style name="CustomEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cyan</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Ejercicio 2 -->
    <style name="CustomActivityStyle" parent="Theme.Ej02_Estilos">
        <item name="android:statusBarColor">@color/cyan</item>
    </style>

    <!-- Ejercicio 3 -->
    <style name="CustomLinearLayoutStyle" parent="Theme.Ej02_Estilos">
        <item name="android:background">@color/yellow</item>

    </style>

    <style name="CustomBackgroundEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@color/malva</item>
    </style>

</resources>